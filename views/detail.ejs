<script>
    $('#nav-tab button').click(function () {
        $.each($(this).siblings(), function (indexInArray, valueOfElement) {
            $(valueOfElement).removeClass("bg-light");
        });
        $(this).addClass("bg-light");
    });

    $('body').on("click", ".star-rating i", function () {
        let star = $(this);
        let id = star.attr("id");
        let star_no = id.replace("fa-", "");

        for (let index = star_no; index <= 5; index++) {
            $("#fa-" + index).removeClass("fas").addClass("far");
        }

        for (let index = 1; index <= star_no; index++) {
            $("#fa-" + index).removeClass("far").addClass("fas");
        }

        $('input[name="users_rating"]').val(star_no);
    });

</script>
