<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-grid.min.css" />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/signup.css" />
    <link rel="stylesheet" href="/css/signin.css" />
  </head>
  <body>
    <div class="main-box d-flex justify-content-center w-100 h-100">
      <div class="my-2 p-1">
        <div class="p-3">
          <!-- <div class="mb-3 text-center">
                <h5><span>L</span>ogin</h5>
            </div> -->
          <div class="text-center" >
            <div class="form_wrapper">
              <div class="form_container">
                <div class="title_container h5" style="font-weight: bolder; font-size: 2.0rem;">
                  <h2><span>S</span>ign <span>I</span>n</h2>
                </div>
                <div class="alert alert-danger alert-dismissible fade in" style="display: none;">
                  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  <strong>Ooop !</strong>  Either your userId or password is invalid.
                </div>
                <div class="row clearfix">
                  <div class="">
                    <form id="login">
                      
                      <div class="input_field ">
                        <span
                          ><i aria-hidden="true" class="fa fa-envelope"></i
                        ></span>
                        <input type="email" name="email" placeholder="Email or Mobile number" />
                        
                      </div>
                      <div class="input_field ">
                        <span
                          ><i
                            aria-hidden="true"
                            class="fa fa-eye"
                            onclick="showPassword(this)"
                          ></i
                        ></span>
                        <input
                          type="password"
                          class="myInput"
                          name="password"
                          placeholder="Password*"
                          autocomplete="new-password"
                          required
                        />
                        
                      </div>
                      
                     
                      <input class="button" type="submit" value="Sign in" />
                      <a href="/register" style="text-decoration: none; font-size: 1.3rem;">New here? Create an account</a>
                      <div class="text-center">
                        <p class="text-muted">OR connect with</p>
                      </div>
                        
                      <div class="social">
                        <a href="#"><img src="/img/logo/facebook.png" alt="facebook" style="width: 30px;"></a>
                        <a href="#"><img src="/img/logo/google.png" alt="google" style="width: 30px;"></a>
                        <a href="#"><img src="/img/logo/instagram.png" alt="instagram" style="width: 30px;"></a>
                      </div>

                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
      function showPassword(para) {
        var x = para.parentElement.nextElementSibling;
        if (x.type === "password") {
          x.type = "text";
        } else {
          x.type = "password";
        }
      }
      
      $(document).ready(function () {
        $("#login").submit(function (e) {
          e.preventDefault();
          
          let that = $(this);

        

          $.each($('.invalid-feedback'), function (indexInArray, valueOfElement) { 
            $(valueOfElement).html("");
          });
          $(".alert").css("display", "none");

        
          $.ajax({
            type: "POST",
            url: "/login",
            data: {
              email: that.find("input[name='email']").val(),
              password: that.find("input[name='password']").val(),
            }, 
            dataType: "json",
            success: function (response) {
              if(response.message != "success"){

                $(".alert").css("display", "block");

              }else{
                location = "/admin/"
              }
            },
          });
        });
      });

      

    </script>
  </body>
</html>
